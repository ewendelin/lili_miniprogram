<view class="claim-photo-container">
  <image class="claim-food" src="{{claim.image}}"></image>
</view>
<view class="text-container">
  <view class="claim-title">Yuuum!</view>

  <view class="claim-content1">
    You claimed {{claim.name}} from {{claim.restaurant}} at {{claim.claimed_at}}.
  </view>

  <view class="claim-content2">
    You will be able to pick up your food from {{claim.start-time}} to {{claim.end-time}} 
  </view>

    <map id="claim-map"
        latitude="{{latitude}}"
        longitude="{{longitude}}"
        markers="{{markers}}"
        covers="{{covers}}"
        show-location>
    </map>
     <button class="weui-btn" type="warn" data-itemid="{{item.id}}" bindtap="deleteItem">
      Cancel
    </button>
</view>
