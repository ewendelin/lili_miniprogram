/* pages/restaurant/restaurant.wxss */
.respic {
  height:240px;
  background-size:cover;
  background-position:center;
}
.restaurant-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.restaurant-name {
  width: 80vw;
  font-weight: bolder;
  font-size: 20px;
  margin-bottom:10px;
  margin-top:15px;
}

.restaurant-cuisine {
  width: 80vw;
  font-size: 14px;
  color: #616161;
  margin-bottom: 10px;
  padding-bottom: 10px;
  border-bottom: 0.5px solid #EEEEEE;
}
/* .restaurant-description {
  width: 80vw;
  font-size: 14px;
  margin-bottom: 3px;
} */
.restaurant-address {
  width: 80vw;
  font-size: 14px;
  /* margin-bottom: 10px; */
}
.find-on-map {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
}
.map-card {
  height: 140px;
  width: 80vw;
  /* text-shadow: 0 1px 1px rgba(0,0,0,0.6); */
  border-radius: 4px;
  /* border: .5px solid lightgray; */
  /* margin-bottom: 20px; */
}
#myMap {
  height: 100%;
  width: 100%;
}

/* .map-card-btn {
  width: 30vw;
  height: 100%;

} */
.reviews {
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
}
.review-title {
  width: 80vw;
  font-size: 18px;
  margin-bottom: 10px;
  color: black;
}
.user-review-card {
  width: 80vw;
  min-height: 100px;
  border-radius: 3px;
  margin-top:10px;
  border-top: 0.5px solid rgb(235, 234, 234);
  margin-bottom: 5px;
}

.create-review-btn {
  width: 85vw;
  height: 40px;
  background-color: #F7BF33;
  color: white;
  opacity: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 3px;
  font-size: 20px;
  font-weight: bolder;
  margin-bottom: 30rpx;
  margin-top: 30px;
  box-shadow: .5px .5px .5px .5px gainsboro;
}

.av-name {
  /* flex-direction: row; */
  display:flex;
  width: 80vw;
  align-content: center;
  align-items: center;
  justify-items: center;
  margin-top:20px;
}
.user-name {
  font-size: 16px;
  display: inline-block;
  margin-left: 15px;
}
  
.user-avatar {
  border-radius: 50%;
  width: 50px;
  height: 50px;
  display: inline-block;
  background-size:cover;
}
.star-rating {
position: absolute;
right: 35px;
color:#f8b500;
font-size:25px;
font-weight:bolder;
}

.review-content {
  font-size: 14px;
  margin-top:10px;
  margin-bottom:15px;
  margin-left:3px;
}
