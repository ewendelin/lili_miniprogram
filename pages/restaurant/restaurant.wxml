<image class="respic" src="{{restaurant.image}}">
</image>
<view class="restaurant-container">
  <view class="restaurant-name">
    {{restaurant.name}}
  </view> 
  <view class="star-rating">
    <!-- <view class="{{restaurant.rating}}">
    
    </view> -->
  </view>
  <view class="restaurant-cuisine">
    {{restaurant.cuisine}}
  </view> 
  <view class="restaurant-description"> 
    {{restaurant.description}}
  </view>
   <view class="restaurant-address">
    Address: {{restaurant.address}}
  </view>
</view> 
<view class="find-on-map">
  <view class="map-card">
    <map 
      id="myMap" 
      latitude="{{latitude}}" 
      longitude="{{longitude}}" 
      markers="{{markers}}"
      covers="{{covers}}"
      show-location> 
    </map>
  </view>
</view>
<view class="reviews">
  <view class="review-title">
    Reviews
  </view>
  <view class="create-review-btn" bindtap="createReview">Add a Review</view>
</view>