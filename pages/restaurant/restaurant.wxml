<view class='respic' style="background-image:url({{restaurant.image}})"></view>

<!-- <image class="respic" src="{{restaurant.image}}"> -->
<!-- </image> -->
<view class="restaurant-container">
  <view class="restaurant-name">
    {{restaurant.name}}
  </view> 
  <view class="star-rating">
    <!-- <view class="{{restaurant.rating}}">
    
    </view> -->
  </view>
  <view class="restaurant-cuisine">
    {{restaurant.cuisine}}
  </view> 
  <!-- <view class="restaurant-description"> 
    {{restaurant.description}}
  </view> -->
   <view class="restaurant-address">
    Address: {{restaurant.address}}
  </view>
</view> 
<view class="find-on-map">
  <view class="map-card">
    <map 
      id="myMap" 
      latitude="{{latitude}}" 
      longitude="{{longitude}}" 
      markers="{{markers}}"
      covers="{{covers}}"
      show-location> 
    </map>
  </view>
</view>
<view class="reviews">
  <view class="review-title">
    Reviews
  </view>
  <view class="user-review-card">
     <view class='star-rating'>{{review.star}}****</view>

    <view class="av-name">
      <view class="user-avatar" src="{{user-avatar-get-user-info}}"></view>
      <view class="user-name">{{review.user}}Ellen</view>
    </view>
      <view class="user-input">
        <view class="review-content">{{review.content}}Hej detta var jattebra. Smakar gott. Kommer absolut ga tillbaka.</view>
        <view class="user-pic">{{review.photos}}</view>
      </view>
    </view>
    <view class="create-review-btn" bindtap="createReview">
    Add a Review
  </view>
  </view> 
  
