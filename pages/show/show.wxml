<view class="restaurant-card" bindtap='jumpToRestaurant'>
 <view class="restaurant-avatars">
  <image class="restaurant-avatar" src="/images/avatar.png"></image>
  </view>
  <view class="rpostpostposddfdfdfestaurant-info">
    <view class="restaurant-name">{{restaurantname}}</view>
    <view class="restaurant-cuisine">{{restaurantcuisine}}</view>
    <view class="restaurant-address">{{restaurantaddress}}</view>
  </view>
  <view class="restaurant-review">
    <image class="restaurant-rating" src="/images/rating.png">{{restaurantrating}}
    </image>
  </view>
</view>

