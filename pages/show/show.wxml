<view class="product-container">
  <view class="product-name">
    {{productname}}
  </view>
    <view class="product-price">
      <text class="new-price">$10</text> 
      <text class="old-price">$35</text>
    </view>
    <view class="product-description">
      {{description}}
    </view>
  <view class="flexbox">
    <image class="clock" src="https://image.flaticon.com/icons/svg/59/59252.svg">
    </image>
      <view class="time">
        <view class="time-table">Pickup between {{starttime}} - {{endtime}}</view>
      </view>
      
   
