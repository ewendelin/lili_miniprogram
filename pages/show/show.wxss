.restaurant-avatar {
  width: 60px;
  height: 60px;
  margin: 5px;
  border-radius: 50%;
  border: .5px solid lightgrey;
  margin-top: 15px;
}

.restaurant-review {
  margin: auto 0;
}

.restaurant-name {
  font-weight: bolder;
  font-size: 14px;
  margin: 5px;
  margin-left: 15px;
}

.restaurant-cuisine {
 font-size: 12px;
 margin: 5px;
 margin-left: 15px;
}

.restaurant-address {
  font-size: 12px;
  margin: 5px;
  margin-left: 15px;
}

