/* pages/show/show.wxss */
.food-photo-container {
  width: 100vw;
  display: flex;
  justify-content: center;
}
.food {
  max-height: 300px;
  object-fit: cover;
  width: 100vw;
}

.product-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.product-name {
  width: 80vw;
  font-weight: bolder;
  font-size: 20px;
  margin-bottom: 10px;
  margin-top: 15px;
}
.product-price {
  /* text-align: center; */
  width: 80vw;
  margin-bottom: 10px;
}
.new-price {
  font-size: 20px;
  width: 80vw;
  color: #FF8616;
  margin-right: 15px;
}
.old-price {
  width: 80vw;
  font-size: 16px;
  text-decoration: line-through;
  color: lightgrey;
}

.product-description {
  width: 80vw;
  font-size: 14px;
  margin-bottom: 3px;
}

.flexbox {
  display:flex;
  align-content: center;
  align-items: center;
  margin-top: 20px;
  width: 80vw;
}

.clock {
  height:30px;
  width:30px;
  margin-right: 25px;
}

.time-table{
  font-size: 12px;
}
.restaurant-card {
  display: flex;
  justify-content: space-evenly;
  /* padding: 10px; */
  /* border:#E5E5E5 solid 1px; */
  /* margin-left: 10vw; */
  width: 90vw;
  height: 125px;
  margin-top: 20px;
  margin-bottom: 100px;
  margin-left: 5vw;
  margin-right: 5vw;
  /* border: 4px dotted #FF8616; */
  background-color: #FF8616;
  border-radius: 25px;
  box-shadow: 1px 1px lightgrey;
}

/* .restaurant-avatars {
  margin: auto 0;
} */
.restaurant-avatar {
  width: 60px;
  height: 60px;
  margin: 10px;
  border-radius: 50%;
  border: .5px solid lightgrey;
  margin-top: 30px;
  margin-left: 25px;
}

.restaurant-review {
  margin: auto 0;
}

.restaurant-name {
  font-weight: bolder;
  font-size: 14px;
  margin: 5px;
  margin-left: 15px;
  margin-top:20px;
  color: black;
}

.restaurant-cuisine {
 font-size: 12px;
 margin: 5px;
 margin-left: 15px;
 color: black;
}

.restaurant-address {
  font-size: 12px;
  margin: 5px;
  margin-left: 15px;
  color: black;
}

