
.claims-container {
  display: flex;
  justify-content: center;
  align-items: center;
}
.claims-h {
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  text-align: center;
  font-size: 32px;
  margin: 20px;
  font-weight: bold;
  color: #FFC642;
  margin-bottom: 15px;
}

.claim-card {
  display: flex;
  align-items:center; 
  width: 80vw;
  min-height: 100px;
  margin-top: 15px;
  border-bottom: 1px solid gainsboro;
}

.restaurant-info {
  height: 100%;
  flex: 3;
  display:flex;
  justify-content:center; 
  /* align-items:center; */
}

.restaurant-info-content {
  max-width:90%;
  margin-left: 20px;
  padding-bottom: 5px;
}

.restaurant-name {
  font-weight: bolder;
  font-size: 16px;
  color: black;
  margin-bottom: 3px;
}

.created-at {
  font-size: 12px;
}

.below-info {
  max-width:90%;
  margin-left: 20px;
}

.dish {
  display: inline-block;
  margin-right: 15px;
  font-size: 14px;
  font-weight: bolder;
}

.price {
  display: inline-block;
  color: #589F29;
  font-size: 16px;
  font-weight: bolder;
}