
.claims-container {
  display: flex;
  flex-direction:column;
  align-items: center;
}
.claims-h {
  text-align: center;
  font-size: 30px;
  margin: 20px;
  font-weight: bolder;
  color: #F7BF33;
  margin-bottom: 15px;
}

.claim-card {
  display: flex;
  align-items:center; 
  width: 80vw;
  min-height: 100px;
  margin-top: 15px;
  border-bottom: 1px solid gainsboro;
}

.restaurant-info {
  height: 100%;
  flex: 3;
  display:flex;
  justify-content:center; 
  /* align-items:center; */
}

.restaurant-info-content {
  max-width:90%;
  margin-left: 20px;
  /* padding-bottom: 5px; */
}

.restaurant-name {
  font-weight: bolder;
  font-size: 16px;
  color: black;
  margin-bottom: 3px;
}

.created-at {
  font-size: 12px;
}

.below-info {
  max-width:90%;
  margin-left: 20px;
  flex-direction: column;
}

.dish {
  margin-right: 15px;
  font-size: 14px;
  font-weight: bolder;
  margin-top: 3px;
}

.price {
  color: #589F29;
  font-size: 16px;
  font-weight: bolder;
  margin-top: 3px;
}

.cancel-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  /* padding-top:20px;
  padding-bottom: 20px; */
  width: 20px;
  height: 20px;
  background-color: #fff;
  /* border-radius: 3px; */
  border: none;
}
.btn-text {
  font-size: 14px;
  align-content: center;
  text-align: center;
  color: white;
  font-weight: bolder;
}

.buttonbox{
  display:flex;
  justify-content: center;
}

.hr { 
    display: block;
    margin-top: 10px;
    margin-bottom: 10px;
    margin-start: auto;
    margin-end: auto;
    overflow: hidden;
    border-style: inset;
    border-width: 0.3px;
    border-style: dashed;
    border-color: gainsboro;
}